<h1>Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |s| %>
      <tr>
        <td> <%= link_to image_tag(s.icon, class: "img-responsive icon"), show_resources_path(id: s.id) %></td>
        <td><%= s.name %></td>
        <td><%= s.icon %></td>
        <td><%= s.description %></td>
        <td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Edit', edit_subject_path(s) %></td>
        <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

