<p id="notice"><%= notice %></p>


<!-- change to div class=container overlay -->
<div class = "container overlay">
  <table>
    <h2>Resources</h2>
    <thead>
      <tr>
        <th>Name</th>
        <th>Url</th>
        <th>Description</th>
        <th>Rank</th>
        <th>Comment ids</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @resources.each do |resource| %>
        <tr>
          <td><%= resource.name %></td>
          <td><%= link_to resource.url, resource.url%></td>
          <td><%= resource.description %></td>
          <td><%= resource.rank %></td>
          <td><%= resource.comment_ids %></td>
          <td><%= link_to 'Show', resource %></td>
          <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
          <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

